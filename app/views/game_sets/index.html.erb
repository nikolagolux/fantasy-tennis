<p id="notice"><%= notice %></p>

<h1>Game Sets</h1>

<table>
  <thead>
    <tr>
      <th>Match</th>
      <th>Is first player win</th>
      <th>First player gems</th>
      <th>Second player gems</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @game_sets.each do |game_set| %>
      <tr>
        <td><%= game_set.match_id %></td>
        <td><%= game_set.is_first_player_win %></td>
        <td><%= game_set.first_player_gems %></td>
        <td><%= game_set.second_player_gems %></td>
        <td><%= link_to 'Show', game_set %></td>
        <td><%= link_to 'Edit', edit_game_set_path(game_set) %></td>
        <td><%= link_to 'Destroy', game_set, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game Set', new_game_set_path %>
