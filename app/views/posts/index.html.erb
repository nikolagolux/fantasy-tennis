<h1>Posts</h1>

<div class="flex-container">
  <% @posts.each do |post| %>
    <div class="box">
      <a href=<%= post_path(post) %>>
        <h3><%= post.title %></h3><br>
        <span><%= post.description[0, 60] + "..." %></span>
        <h4><%= post.category %></h4>
      </a>
    </div>
  <% end %>
</div>

